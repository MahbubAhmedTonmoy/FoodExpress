@model IEnumerable<FurnitureHouse.Models.SpecialTags>
@{
    ViewData["Title"] = "Index";
}

<br /><br />
<div class="row">
	<div class="col-6">
		<h2>Tags List</h2>
	</div>
	<div class="col-6 text-right">
		<a asp-action="Create" class="btn btn-info">Create Tag</a>
	</div>
</div>

<br />
<div>
	<table class="table table-striped border">
		<tr class="table-info">
			<th>
				@Html.DisplayNameFor(m => m.Name)
			</th>
			<th></th>
			<th></th>
		</tr>



		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(m => item.Name)
				</td>
				<td>
					<partial name="_TableButtonPartial" model="item.Id" />
				</td>
			</tr>
		}
		</table>
</div>

