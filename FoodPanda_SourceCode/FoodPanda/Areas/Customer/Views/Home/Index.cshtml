@model IEnumerable<FurnitureHouse.Models.Products>
@using FurnitureHouse.Extensions

<br /><br />

<form method="get" action="@Url.Action("Index", "Home")">
	<label for="search">Search</label>
	<input 	type="text" name="search" id="search" />
	<button type="submit"><i class="fas fa-search"></i></button>
</form>

<div class="row">
	@if (Model.Count() > 0)
	{
		foreach (var item in Model)
		{
			<div class="border border-info rounded col-6" style="margin-top:10px;margin-bottom:10px;padding:10px;">
				<div class="row">
					<div class="col-9">
						<div class="row">
							<div class="col-9">
								<label class="text-primary" style="font-size:21px;color:maroon;">@item.Name</label>
								<br />
								<label class="badge badge-primary">@item.SpecialTags.Name</label>
								@if (item.Spicyness == "1")
								{
									<label class="badge badge-info">@Products.EScipy.Spicy</label>
								}
								@if (item.Spicyness == "2")
								{
									<label class="badge badge-info">@Products.EScipy.VerySpicy</label>
								}
							</div>
							<div class="col-3 text-right" style="color:maroon">
								<h4>$@item.Price</h4>
							</div>
						</div>
						<div class="row">
							<div class="col-9">
								<p>@item.Description</p>
							</div>

							<div class="col-3" text-right>
								<a asp-action="Details" class="btn btn-success" asp-route-id="@item.Id">Details</a>
							</div>
						</div>

					</div>
					<div class="col-3">
						<img src="@item.Image" width="90%" height="80%" style="border-radius:5px;border:1px solid #bbb9b9;" />
					</div>
				</div>
			</div>

		}


	}
</div>
